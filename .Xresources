! ----------------------------------------------------------------------------
! ! file:     ~/.Xresources
! ! author:   Kelly Price
! ! vim:nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
! !
! ----------------------------------------------------------------------------
Xft*antialias:	    	1
Xft*dpi:			    96
Xft*rgba:               rgb
xft*hinting:            1
xft*hintstyle:          hintfull
xft*lcdfilter:          lcddefault
xft*autohint:           0

! xterm Settings -------------------------------------------------------------
xterm*highlightSelection: true
xterm*scrollBar:	    false
xterm*visualbell:	    true
xterm*cursorBlink:	    true
!xterm*faceName:		    DejaVuSansMono:pixelsize=10
!xterm*faceName:		    Inconsolata:pixelsize=16
!xterm*faceName:		    SourceCodePro:style=Regular:size=11
xterm*faceName:		    SourceCodeProforPowerline:style=Regular:size=11
!xterm*faceName:		    Monaco:pixelsize=10
!xterm*faceName:		    Mensch:pixelsize=9
xterm*VT100.translations: #override <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)
xterm*metaSendsEscape: true
xterm*saveLines: 4096
xterm*termName: xterm-256color

!xscreensaver ------------------------------------------------------------------

!font settings
xscreensaver.Dialog.headingFont:        SourceCodePro:pixelsize=10
xscreensaver.Dialog.bodyFont:           SourceCodePro:pixelsize=10
xscreensaver.Dialog.labelFont:          SourceCodePro:pixelsize=10
xscreensaver.Dialog.unameFont:          SourceCodePro:pixelsize=10
xscreensaver.Dialog.buttonFont:         SourceCodePro:pixelsize=10
xscreensaver.Dialog.dateFont:           SourceCodePro:pixelsize=10
xscreensaver.passwd.passwdFont:         SourceCodePro:pixelsize=10

xscreensaver.Dialog.internalBorderWidth:0
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    2
xscreensaver.passwd.thermometer.width:       6
xscreensaver.dateFormat:    %I:%M%P %a %b %d, %Y

