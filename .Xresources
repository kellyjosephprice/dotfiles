! ----------------------------------------------------------------------------
! ! file:     ~/.Xresources
! ! author:   Kelly Price
! ! vim:nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
! !
! ----------------------------------------------------------------------------
Xft*antialias:	    	1
Xft*dpi:			    96
Xft*rgba:               rgb
xft*hinting:            1
xft*hintstyle:          hintfull
xft*lcdfilter:          lcddefault
xft*autohint:           1

! rxvt-unicode Settings -----------------------------------------------------
urxvt*depth:            24
urxvt*font:             xft:Inconsolata:pixelsize=11
urxvt*fading:           10
urxvt*visualBell:       false
urxvt*scrollTtyKeypress:true
urxvt*scrollWithBuffer: false
urxvt*scrollTtyOutput:  false
urxvt*scrollBar:        false
urxvt*cursorBlink:      false
urxvt*borderLess:       false
! weblauncher settings
urxvt*perl-lib:         /usr/lib/urxvt/perl/
urxvt*perl-ext-common:  default,matcher
urxvt*urlLauncher:      /usr/bin/chromium
urxvt*mather.button:    1

! Xterm Settings -------------------------------------------------------------
XTerm*highlightSelection: true
XTerm*scrollBar:	    false
XTerm*visualbell:	    true
XTerm*cursorBlink:	    true
XTerm*faceName:		    Inconsolata:pixelsize=11
XTerm*VT100.translations: #override <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)

!xscreensaver ------------------------------------------------------------------

!font settings
xscreensaver.Dialog.headingFont:        Inconsolata:pixelsize=10
xscreensaver.Dialog.bodyFont:           Inconsolata:pixelsize=10
xscreensaver.Dialog.labelFont:          Inconsolata:pixelsize=10
xscreensaver.Dialog.unameFont:          Inconsolata:pixelsize=10
xscreensaver.Dialog.buttonFont:         Inconsolata:pixelsize=10
xscreensaver.Dialog.dateFont:           Inconsolata:pixelsize=10
xscreensaver.passwd.passwdFont:         Inconsolata:pixelsize=10

!general dialog box (affects main hostname, username, password text)
xscreensaver.Dialog.foreground:         #93d44f
xscreensaver.Dialog.background:         #000000
xscreensaver.Dialog.topShadowColor:     #000000
xscreensaver.Dialog.bottomShadowColor:  #000000
xscreensaver.Dialog.Button.foreground:  #836e50
xscreensaver.Dialog.Button.background:  #29241d
!username/password input box and date text colour
xscreensaver.Dialog.text.foreground:    #ffeebd
xscreensaver.Dialog.text.background:    #29241d
xscreensaver.Dialog.internalBorderWidth:0
xscreensaver.Dialog.borderWidth:        0
xscreensaver.Dialog.shadowThickness:    2
!timeout bar (background is actually determined by Dialog.text.background)
xscreensaver.passwd.thermometer.foreground:  #ff8d8d
xscreensaver.passwd.thermometer.background:  #000000
xscreensaver.passwd.thermometer.width:       6
!datestamp format--see the strftime(3) manual page for details
xscreensaver.dateFormat:    %I:%M%P %a %b %d, %Y


